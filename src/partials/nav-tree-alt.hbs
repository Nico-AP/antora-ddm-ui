{{#if navigation.length}}
<div class="nav-list">
  {{#each navigation}}
  <div class="nav-item{{#if (eq ./url @root.page.url)}} is-current-page{{/if}}" data-depth="{{or ../level 0}}">
    {{#if ./content}}
    {{#if ./items.length}}
    <button class="nav-item-toggle nav-item-toggle-level-{{or ../level 0}}"></button>
    {{/if}}
    {{#if ./url}}
    <a class="nav-link nav-link-{{or ../level 0}}" href="
      {{~#if (eq ./urlType 'internal')}}{{{relativize ./url}}}
      {{~else}}{{{./url}}}{{~/if}}">{{{./content}}}</a>
    {{else}}
    <span class="nav-text nav-link-{{or ../level 0}}">{{{./content}}}</span>
    {{/if}}
    {{/if}}
{{> nav-tree navigation=./items level=(increment ../level)}}
  </div>
  {{/each}}
</div>
{{/if}}
